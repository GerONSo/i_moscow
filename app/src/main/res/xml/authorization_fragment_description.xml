<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/authorization_open_keyboard_transition"
        app:constraintSetStart="@id/authorization_start_open_keyboard"
        app:constraintSetEnd="@id/authorization_end_open_keyboard"
        app:duration="200"/>
    <ConstraintSet
        android:id="@+id/authorization_start_open_keyboard">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authorization"
            android:text="Авто\nризация"
            android:textSize="38sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.45"
            style="@style/MediumTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/authorization_end_open_keyboard"
        app:deriveConstraintsFrom="@id/authorization_start_open_keyboard">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authorization"
            android:text="Авто\nризация"
            android:textSize="38sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45"
            style="@style/MediumTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"/>
    </ConstraintSet>
</MotionScene>